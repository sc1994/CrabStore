<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/element.css")
    @Styles.Render("~/Content/main.css")
</head>
<body>
    <div class="index-head"></div>
    <div class="el-row" style="margin-left: -10px; margin-right: -10px;">
        <div class="el-col-4" style="padding-left: 10px; padding-right: 10px;" id="menuApp">
            <el-menu default-active="1" class="el-menu-vertical" theme="dark">
                <template v-for="(menu, menuIndex) in menuList">
                    <el-submenu v-if="menu.child.length > 0">
                        <template slot="title">
                            <i :class="menu.icon"></i>
                            {{menu.title}}
                        </template>
                        <el-menu-item v-for="(c, cIndex) in menu.child" :key="c.id">{{c.title}}</el-menu-item>
                    </el-submenu>
                    <el-menu-item v-else :index="menu.id" >
                        <i :class="menu.icon"></i>
                        {{menu.title}}
                    </el-menu-item>
                    </el-menu-item>
                </template>
            </el-menu>
        </div>
        <div class="el-col-20" style="padding-left: 10px; padding-right: 10px;">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/Scripts/vue/vue.js")
    @Scripts.Render("~/Scripts/element/index.js")
    @Scripts.Render("~/Scripts/main.js")
    @Scripts.Render("~/Scripts/app/menu.js")
    @RenderSection("script", false)
</body>
</html>
